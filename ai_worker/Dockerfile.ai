FROM ubuntu:22.04

# Устанавливаем зависимости системы
RUN apt-get update && \
    apt-get install -y \
        curl \
        python3 \
        python3-pip \
        git \
        build-essential && \
    ln -s /usr/bin/python3 /usr/bin/python

# Рабочая директория
WORKDIR /ai_worker

# Сначала копируем только requirements.txt (чтобы кешировалось)
COPY ./ai_worker/requirements.txt ./requirements.txt

# Устанавливаем Python-библиотеки
RUN pip install --no-cache-dir -r requirements.txt

# Только потом копируем остальной код
COPY ./ai_worker .

# Запуск (опционально)
CMD ["python", "ml_model.py"]
